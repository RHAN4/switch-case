programa {
  funcao inicio() {
    
    cadeia mes, numero
    escreva("Digite o número do mês: ")
    leia(mes)

    escolha(mes) {
    caso "1" :
    numero = "Janeiro"
    pare

    caso "2" :
    numero = "Fevereiro"
    pare

    caso "3" :
    numero = "Março"
    pare

    caso "4" :
    numero = "Abril"
    pare

    caso "5" :
    numero = "Maio"
    pare

    caso "6" :
    numero = "Junho"
    pare

    caso "7" :
    numero = "Julho"
    pare

    caso "8" :
    numero = "Agosto"
    pare

    caso "9" :
    numero = "Setembro"
    pare

    caso "10" :
    numero = "Outubro"
    pare

    caso "11" :
    numero = "Novembro"
    pare

    caso "12" :
    numero = "Dezembro"
    pare

    caso contrario :
    escreva ("Número inválido.")
    }

    escreva("\nEsse mês é: ", numero)


  }
}
